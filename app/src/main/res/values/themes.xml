<resources>
    <!-- Base application theme. -->
    <style name="Theme.Autorebooter" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerMode">clock</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/light_gray</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>
</resources>